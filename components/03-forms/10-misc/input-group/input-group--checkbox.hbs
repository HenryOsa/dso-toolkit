<div class="input-group {{ modifier }}">
  {{#if checkboxLeft }}
    <span class="input-group-addon">
      <input type="checkbox" aria-label="{{ ariaLabelAddon }}"/>
    </span>
  {{/if}}
  <input type="text" class="form-control" aria-label="{{ ariaLabel }}" {{{ifattr 'placeholder' placeholder}}}/>
  {{#if checkboxRight }}
    <span class="input-group-addon">
      <input type="checkbox" aria-label="{{ ariaLabelAddon }}"/>
    </span>
  {{/if}}
</div>
