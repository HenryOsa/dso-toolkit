<dl{{{ifattr ' class' modifier }}}>
  {{#each definitions }}
    {{#if term}}
      {{#if emphasizeElement}}
        <dt{{{ifattr ' class' hightlightElement }}}><strong>{{ term }}</strong></dt>
      {{else}}
        <dt{{{ifattr ' class' hightlightElement }}}>{{ term }}</dt>
      {{/if}}
    {{/if}}
    {{#each descriptions }}
      {{#if description}}
        {{#if emphasizeElement}}
          <dd{{{ifattr ' class' hightlightElement }}}><strong>{{ description }}</strong></dd>
        {{else}}
          <dd{{{ifattr ' class' hightlightElement }}}>{{ description }}</dd>
        {{/if}}
      {{/if}}
    {{/each }}
    {{#if longread }}
      <dd>
        {{#each longread }}
          <p>{{ paragraph }}</p>
        {{/each }}
      </dd>
    {{/if }}
  {{/each}}
</dl>
