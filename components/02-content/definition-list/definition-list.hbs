<dl{{{ifattr ' class' modifier }}}>
  {{#each definitions }}
    <dt{{{ifattr ' class' hightlightElement }}}>{{ term }}</dt>
    {{#each descriptions }}
      <dd{{{ifattr ' class' hightlightElement }}}>{{ description }}</dd>
    {{/each }}
    {{#if longread }}
      <dd>
        {{#each longread }}
          <p>{{ paragraph }}</p>
        {{/each }}
      </dd>
    {{/if }}
  {{/each}}
</dl>
